# Environment Variables for ReachInbox (Development Mode)
# Copy this file to .env and fill in your actual values

# IMAP Configuration (for real email sync)
IMAP_USER=your_email@example.com
IMAP_PASS=your_email_password
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_TLS=true

# Gemini API Configuration (required for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# Elasticsearch Configuration (use mock mode if not running Docker)
ES_URL=mock://development
# ES_URL=http://localhost:9200  # Uncomment for real Elasticsearch

# Qdrant Configuration (for vector search)
QDRANT_URL=mock://development
# QDRANT_URL=http://localhost:6333  # Uncomment for real Qdrant

# Slack Integration (optional, for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Webhook Configuration (optional, for external automation)
WEBHOOK_SITE_URL=https://webhook.site/your-unique-url
ES_URL=mock://localhost:9200
# Or use real Elasticsearch: ES_URL=http://localhost:9200

# Qdrant Vector Database Configuration (use mock mode if not running Docker)
QDRANT_URL=mock://localhost:6333
# Or use real Qdrant: QDRANT_URL=http://localhost:6333

# Server Configuration
PORT=3000
